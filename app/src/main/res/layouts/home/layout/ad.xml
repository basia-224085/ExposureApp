<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/honeydew"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/honeydew"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="32sp"
            android:theme="@style/app_name" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginBottom="@dimen/fab_margin"
            android:text="subtitle"
            android:textSize="22sp"
            android:textStyle="italic" />

        <VideoView
            android:id="@+id/video"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/subtitle"
            android:layout_centerInParent="true"

            android:layout_marginBottom="@dimen/fab_margin" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignStart="@id/video"
            android:layout_alignTop="@id/video"
            android:layout_alignBottom="@id/video"
            android:background="@color/powder_blue"
            android:padding="@dimen/fab_margin" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video"
            android:text="text of the post; it will most definetly be quite long, at least a few lines\n\nend."
            android:textSize="18sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>