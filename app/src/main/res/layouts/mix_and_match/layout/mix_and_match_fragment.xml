<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/honeydew"
    android:layout_height="match_parent"
    tools:context=".ui.mix_and_match.offers.MixAndMatchFragment">

    <Button
        android:id="@+id/my_matches_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Matches" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offers"
        android:background="@color/honeydew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_matches_button"
        android:padding="@dimen/fab_margin"
        android:scrollbars="horizontal" />

    <Button
        android:id="@+id/add_offer_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/offers"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_add"
        android:drawableTint="@color/honeydew"
        android:text="add new offer"/>

    <Button
        android:id="@+id/look_for_a_match_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Look for a match"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="@color/honeydew"/>
</RelativeLayout>