<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/powder_blue_light"
    android:id="@+id/popup_layout"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/powder_blue_light"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            tools:ignore="UseSwitchCompatOrMaterialXml">

            <Button
                android:id="@+id/first_option_button"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/prussian_blue"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_edit"
                android:drawableTint="@color/honeydew"
                android:text="@string/edit_picture"/>
            <Button
                android:id="@+id/second_option_button"
                android:drawableLeft="@drawable/ic_delete"
                android:drawableTint="@color/honeydew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_picture"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>